<Window x:Class="MangaSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpf="clr-namespace:Mu.Main.Ui.Wpf;assembly=Mu.Main.Ui.Wpf"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel LastChildFill="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            
            <wpf:NavigationTreeActionsView Grid.Row="0" x:Name="NavigationTreeActions" />
            <wpf:NavigationTreeView Grid.Row="1" x:Name="NavigationTree" />
            
        </Grid>
        <Grid x:Name="ContentGrid" />
    </DockPanel>
</Window>
