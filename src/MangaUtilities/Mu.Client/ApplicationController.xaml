<fluent:RibbonWindow x:Class="Mu.Client.ApplicationController"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fluent="urn:fluent-ribbon"
        xmlns:resx="clr-namespace:Mu.Client.Properties"
        xmlns:alarms="clr-namespace:Mu.Client.Alarms"
        Title="ApplicationController" Height="350" Width="525">
    
    <DockPanel LastChildFill="True">
        <fluent:Ribbon DockPanel.Dock="Top">
            <fluent:RibbonTabItem  Header="{x:Static resx:Resources.Tab_Home_Header}" x:Name="HomeRibbonTab" />
        </fluent:Ribbon>

        <fluent:StatusBar DockPanel.Dock="Bottom" />
        
        <Grid x:Name="MainContent">

        </Grid>
    </DockPanel>
</fluent:RibbonWindow>
